---
import '../style.css';

import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Experience from '../components/Experience.astro';
---

<Layout title="CV">
  <Header />
  <Experience />

  <section class="my-4 space-y-1">
    <h3 class="font-bold text-xl">Educación</h3>

    <div class="text-sm">
      <div class="flex items-center justify-between">
        <h4 class="font-bold text-primary">Universidad de Alicante (UA)</h4>
        <span class="text-gray-800">2018 - 2023</span>
      </div>
      <p class="text-gray-800">Grado en Ingeniería Multimedia</p>
    </div>
  </section>

  <section class="my-4 space-y-1">
    <h3 class="font-bold text-xl">Idiomas</h3>

    <div class="text-sm">
      <p class="text-gray-800"><b class="text-primary">Español y Valenciano</b>: Nativo</p>

      <p class="text-gray-800">
        <b class="text-primary">Inglés</b>: Nivel intermedio (Certificado B1)
      </p>
    </div>
  </section>

  <section class="my-4 space-y-1">
    <h3 class="font-bold text-xl">Habilidades</h3>

    <div class="gap-1"></div>
    <div class="flex flex-wrap items-center text-sm"></div>
  </section>

  <section class="my-4 space-y-1" id="skills">
